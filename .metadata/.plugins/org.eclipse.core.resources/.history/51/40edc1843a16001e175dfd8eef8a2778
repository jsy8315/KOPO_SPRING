package com.jsp.ex.command;

import com.jsp.ex.dao.BDao;

import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;

import java.io.IOException;
import java.sql.Timestamp;

public class BWriteCommand implements BCommand {

    @Override
    public void execute(HttpServletRequest request, HttpServletResponse response) {
        String bName = request.getParameter("bName");
        String bTitle = request.getParameter("bTitle");
        String bContent = request.getParameter("bContent");
        String bDateStr = request.getParameter("bDate");
        Timestamp bDate = Timestamp.valueOf(bDateStr);
 // 문자열로 받아옴

        BDao dao = new BDao();
        try {
            dao.write(bName, bTitle, bContent, bDate);
            // 글 작성에 성공한 후에는 작성한 글 목록으로 리다이렉트합니다.
            response.sendRedirect("boardList.do");
        } catch (IOException e) {
            e.printStackTrace();
        }
    }

}
